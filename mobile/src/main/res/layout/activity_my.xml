<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MyActivity"
        tools:deviceIds="wear_square">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="12">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="#aaffff"
            android:weightSum="12">
            <TextView
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Initial"/>

            <TextView
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Initial"/>

            <TextView
                android:id="@+id/onBoard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Initial"/>

            <CheckBox
                android:id="@+id/accFil"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Acc. Filter"/>

            <CheckBox
                android:id="@+id/velFil"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Veloc. Filter"/>

            <CheckBox
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Drawing Line"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="4"
            android:background="#ffffaa">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Graph 1"
                android:textSize="18dp"
                android:textColor="#000"
                />
            <RadioGroup
                android:id="@+id/g1"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="0dp"
                android:orientation="vertical">
                <RadioButton android:id="@+id/linAcc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linear Acc."/>
                <RadioButton android:id="@+id/absAcc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absolute Acc."/>
                <RadioButton android:id="@+id/velocity1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Velocity"/>
                <RadioButton android:id="@+id/none1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="4"
            android:background="#ffaaff">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Graph 2"
                android:textSize="18dp"
                android:textColor="#000"
                />
            <RadioGroup
                android:id="@+id/g2"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="0dp"
                android:orientation="vertical">
                <RadioButton android:id="@+id/linAcc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linear Acc."/>
                <RadioButton android:id="@+id/absAcc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absolute Acc."/>
                <RadioButton android:id="@+id/velocity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Velocity"/>
                <RadioButton android:id="@+id/none2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/set"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Set View"
                android:onClick="setView"/>

            <EditText
                android:id="@+id/letter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/excel_button"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Open Excel"
                android:onClick="excelManager"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/guess_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:password="false"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/draw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:background="#ffc9c9c9"/>

</LinearLayout>
